<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <title>Booklink - Add new user</title>
    </head>
<body>

    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <br>
        <div class="text-center"><h2>Add New User</h2></div>
        <br>
        <div class="text-center">
            <form action="/addUser" method="POST" enctype="multipart/form-data">
                <label for="username">User Name:</label><br>
                <input type="text" id="username" name="username" required><br><br>

                <label for="userEmail">User Email:</label><br>
                <input type="email" id="userEmail" name="userEmail" required><br><br>

                <label for="userPassword">User Password:</label><br>
                <input type="password" id="userPassword" name="userPassword" required><br><br>

                <label for="userImage">Image:</label><br>
                <input type="file" id="userImage" name="userImage" accept="image/*" required><br><br>

                <button type="submit">Add User</button>
            </form>
        </div>
    </div>
</body>
</html>
