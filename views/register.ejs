<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Booklink</title>
  </head>
  <body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <h1 class="mt-5">Register</h1>
        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-danger">
                <% messages.forEach(function(message) { %>
                    <p><%= message %></p>
                <% }); %>
            </div>
        <% } %>
        <form action="/register" method="POST" class="mt-4" enctype="multipart/form-data">
            <div class="form-group">
                <label for="userName">Username:</label>
                <input type="text" id="userName" name="userName" class="form-control" required 
                <% if (formData && formData.userName) { %> value="<%= formData.userName %>" <% } else { %> value="" <% } %>>
            </div>
            <div class="form-group">
                <label for="userEmail">Email:</label>
                <input type="userEmail" id="userEmail" name="userEmail" class="form-control" required 
                <% if (formData && formData.userEmail) { %> value="<%= formData.userEmail %>" <% } else { %> value="" <% } %>>
            </div>
            <div class="form-group">
                <label for="userPassword">Password:</label>
                <input type="password" id="userPassword" name="userPassword" class="form-control" required>
            </div>
            
            <div class="form-group">
            <label for="userImage">User Image:</label><br>
            <input type="file" id="userImage" name="userImage" accept="image/*" required><br><br>

            </div>  
            <div class="form-group">
                <label for="userRole">Role:</label>
                <select id="userRole" name="userRole" class="form-control" required>
                    <option value="user" <% if (formData && formData.userRole === 'user') { %> selected <% } %>>User</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</body>
</html>
