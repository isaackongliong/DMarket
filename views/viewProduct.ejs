<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Student List App</title>
</head>

<body>
  <%- include ('partials/navbar.ejs') %>

  <div class="container">
    <br>
    <div class="text-center">
      <h2>Product Details</h2>
    </div>
    <br>
    <% if (product) { %> <!-- Check if product data exists -->
      <div>
        <p><b>Product Name:</b><br>
          <%= product.productName %>
        </p>
        <p><b>product Image:</b><br>
          <img src="../images/<%= product.productImage %>" width="20%">
        </p>
        <p><b>Product Description:</b><br>
          <%= product.productDescription %>
        </p>
        <p><b>Product Price:</b><br>
          <%= product.productPrice %>
        </p>
        <p>
          <form action="/addToCart/<%=product.productId%>" method="post">
            <input type="number" id="productQuantityToAdd" name="productQuantityToAdd" value="1" >
            <input type="submit" value="Add to cart">
            </form>
        </p>
        <p>
          <a href="/addReview/<%= product.productId %>">Add Review</a><br>

          <a href="/product/<%= product.productId %>/reviews">View reviews</a><br>
        </p>
      </div>
      <% } else { %>
        <p>No Product found.</p>
        <% } %>

          <a href="/">Back</a>
  </div>

</body>

</html>